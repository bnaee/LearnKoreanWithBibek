<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="android:actionBarSize">65dp</item>
        <item name="android:fontFamily">@font/urbanist_font_family</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>

    </style>

    <style name="AppThemeExam" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="android:actionBarSize">80dp</item>
        <item name="android:fontFamily">@font/urbanist_font_family</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>

    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/button_blue</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTextAppearanceGrammar" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="CircularDeterminateProgressBarBlue">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_home_score</item>
    </style>

    <style name="CircularDeterminateProgressBarRed">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_home_score_red</item>
    </style>


</resources>
